@charset "utf-8";
/* CSS Document */

/*图文管理列表*/
.tuwenBox{margin:0 5px;}
.tuwenTable{width:100%;}
.tuwenTable tr th{width:25%;}
.tuwenItem{border:1px solid #e5e5e5; margin:5px;}
.tuwenMain{padding:10px 16px; background:#fff;}
.tuwenDate{font-size:12px; color:#969696; line-height:20px; text-align:left; font-weight:normal;}
.tuwenImg{width:100%;}
.tuwenIntro{font-size:12px; color:#646464; line-height:20px; font-weight:normal; text-align:left; margin-top:10px; height:40px; overflow:hidden;}
.tuwenBtn{background:#f2f2f2; height:20px; padding:10px; position:relative;}
.tuwencaozuoBtn{width:50%; float:left; cursor:pointer;}
.tuwenBtn img{height:20px; margin:0 auto; display:block;}
.tuwenLine{position:absolute; left:50%; }

/*图文管理详情*/
.formBox{margin-top:32px;}

/*多图文列表*/
.tuwenSub{border-top:1px solid #e5e5e5; overflow:hidden; padding:6px 16px; position:relative;}
.tuwenSideText{float:left; width:58%; font-size:12px; color:#646464; text-align:left; font-weight:normal; height:36px; overflow:hidden;}
.tuwenSidePic{float:right; width:40%;}
.tuwenselect{border:1px solid #fff; border-top:1px solid #e5e5e5; cursor:pointer;}
.tuwenselect:hover{border:1px solid #fdb874;}
.tuwenselected{border:1px solid #fdb874;}
.tuwenAdd{margin:0 auto; display:block;}

/*多图文详情*/
.tuwenzhezhao{background:#000; opacity:0.5; width:100%; height:20px; padding:4px 0; position:absolute; bottom:0; left:0; display:none;}
.tuwenzhezhaoBtn{width:33.3%; float:left;}
.tuwenzhezhaoBtn img{width:20px; height:20px; margin:0 auto; display:block;}