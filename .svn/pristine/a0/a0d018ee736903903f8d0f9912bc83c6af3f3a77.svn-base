@charset "utf-8";
/* CSS Document */




.pic{ width:100%;}
.topBox{  background-color:#fff;}
.topBox h1{width:100%; font-size:16px; color:#ff4d4; margin:0px auto; line-height:30px; padding:0% 20px;}
.topBox h2{width:100%; font-size:16px; font-weight:900; color:#ff4d4d; margin:0px auto; line-height:30px; padding:0% 20px;}
.topBox h3{width:100%; font-size:14px; color:#666; margin:0px auto; line-height:22px; padding:0% 20px 10px 20px;}
.mindBox{ margin-top:10px; background-color:#fff;  padding:0% 5%;}
.mindBox h1{width:100%; font-size:18px; color:#323232; margin:0px auto; line-height:50px;}
.xiangqing{width:100%; }
.nextBtn1{background:#ff4d4d ;color:#fff; width:100%; height:50px; font-size:18px; margin-top:20px; position:fixed; bottom:0px; z-index:100; overflow:hidden; font-family:"微软雅黑", Arial; letter-spacing:2px;}

/*-----浮动分享框-----*/
.shareDiv{ background:url(../images/bg_float.png) repeat; position:absolute; top:0; left:0; z-index:998; display:none;}
span.close{ display:block; width:24px; height:24px; position:absolute; top:0; right:0; cursor:pointer; padding:6px;}
.share{ width:100%;  height:200px; background:#fff; border-top:3px solid #ff4d4d; position:fixed; bottom:-250px; left:0; z-index:999;}
.share h1{ height:42px; font-size:18px; color:#333; padding-left:20px; margin-top:12px; border-bottom:1px solid #e5e5e5;}
.share h1 font{ color:#ff4d4d; font-size:28px; padding:0 5px;}


.guige{ float:left; width:80px; height:30px; color:#666; text-align:center; line-height:30px; border:1px solid #ccc; margin:20px; border-radius:3px;  }
.guige:hover{color:#ff4d4d; border:1px solid #ff4d4d; cursor:pointer;}
.xuanzhong{color:#ff4d4d; border:1px solid #ff4d4d;}

