@charset "utf-8";
/* CSS Document */

body{ background:#e5e5e5;}
/*---*/
table{ border-collapse:collapse; width:100%;}
.floatLeft{ float:left;}
.floatRight{ float:right;}
.textRed{ color:#ff4d4d;}
.bgRed{ background:#fa4b89;}
.bgYellow{ background:#ff934b;}
.bgBlue{ background:#4bb2fa;}

.top .top-right02 img{width:22px; height:22px;}
.top-right-text{ position:absolute;width:50px;height:38px;top:6px;right:8px;font-size:15px;color:#222; }


.mainBox{ margin-top:10px;}
table.goodsType{ width:100%; height:40px; background:#fff; border-bottom:1px solid #e5e5e5;}
table.goodsType td a{ display:block; margin:0 10%; height:40px; line-height:40px; text-align:center; font-size:16px; color:#222; cursor:pointer; border-bottom:2px solid #fff;}
table.goodsType td a.lion{ border-bottom:2px solid #ff4d4d; color:#ff4d4d;}

/*-----课堂列表-----*/
table.ketangType{  background:#fff;}
table.ketangType td,table.ketangType th{ text-align:center; cursor:pointer;}
table.ketangType td{ padding-top:13px;}
table.ketangType th{ height:20px; font-size:12px; color:#666; font-weight:normal; padding-bottom:10px;}

.classCenter{ background:#fff; padding:10px; margin-top:10px;}
.class{ background:#f5f5f5; border:1px solid #e2e2e2; border-radius:10px; padding:10px; margin-bottom:10px; cursor:pointer;}
.class h1{ height:30px; line-height:30px; font-size:16px; color:#333; padding-right:30px; position:relative;}
.class h1 span{ display:block; width:30px; height:30px; position:absolute; top:2px; right:0;}
img.classImg{ width:100%;}
.class p{ min-height:20px; font-size:12px; color:#888;}


/*-----课堂详情-----*/
.classDetail{ background:#fff;}
.classDetail h1{ font-size:16px; color:#333; height:30px; line-height:30px; padding:0 3%;}
.classDetail h2{ font-size:14px; color:#666; height:20px; line-height:20px; padding:0 3%; margin-bottom:10px;}
.classDetail p{ font-size:12px; color:#888; line-height:130%; letter-spacing:1px; text-indent:24px; padding:0 5%;}

.top-right img{ z-index:999; position:absolute; top:5px; right:5px; cursor:pointer;}
.shoucang_on{display:none;}
.detaileText{ padding:5px 0 10px 0;}




